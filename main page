<body>

    <h1>Minecraft Server Access Request</h1>
    <img src="minecraft-2053886_1920.png" alt="Minecraft Bild" style="max-width: 100%; height: auto;">
    <br><br>
    <button id="request-button">Request Server Access</button>
    
    <div id="access-form">
        <form action="https://formspree.io/f/{mannanba}" method="POST">
            <input type="text" name="username" placeholder="Dein Name" required><br>
            <input type="text" name="gamertag" placeholder="Gamer-Tag" required><br>
            <button type="submit" id="send-button" disabled>Send</button>
        </form>
    </div>

    <script>
        document.getElementById('request-button').onclick = function() {
            document.getElementById('access-form').style.display = 'block';
        };

        document.getElementById('username').oninput = checkForm;
        document.getElementById('gamertag').oninput = checkForm;

        function checkForm() {
            const username = document.getElementById('username').value;
            const gamertag = document.getElementById('gamertag').value;
            document.getElementById('send-button').disabled = !(username && gamertag);
        }
    </script>

</body>
